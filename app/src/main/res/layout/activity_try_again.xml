<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.company.umutmucahit.competitiontime.TryAgain"
    android:id="@+id/res"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Try Again Text"
        android:id="@+id/tryAgain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:textSize="@dimen/abc_action_bar_default_height_material" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkButton"
        android:src="@drawable/check"
        android:layout_below="@+id/tryAgain"
        android:layout_alignRight="@+id/tryAgain"
        android:layout_alignEnd="@+id/tryAgain"
        android:layout_marginTop="103dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noButton"
        android:src="@drawable/cross"
        android:layout_alignTop="@+id/checkButton"
        android:layout_alignLeft="@+id/tryAgain"
        android:layout_alignStart="@+id/tryAgain" />
</RelativeLayout>
