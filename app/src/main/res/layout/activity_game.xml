<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.company.umutmucahit.competitiontime.Game"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/question"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:text="Question Text"
        android:layout_below="@+id/countDown"
        android:layout_alignRight="@+id/multiplier"
        android:layout_alignEnd="@+id/multiplier" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question #"
        android:id="@+id/qnumber"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_dropdownitem_icon_width" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="30"
        android:id="@+id/countDown"
        android:textSize="@dimen/abc_action_button_min_width_material"
        android:layout_below="@+id/multiplier"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 1"
        android:id="@+id/ans1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 2"
        android:id="@+id/ans2"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:layout_below="@+id/ans1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 3"
        android:id="@+id/ans3"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:layout_below="@+id/ans2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 4"
        android:id="@+id/ans4"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/ans3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fifty"
        android:layout_marginBottom="42dp"
        android:background="@drawable/fifty"
        android:layout_above="@+id/ans1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change"
        android:background="@drawable/change"
        android:layout_alignBottom="@+id/fifty"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false"
        android:src="@drawable/change" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x2"
        android:background="@drawable/twice"
        android:layout_alignBottom="@+id/fifty"
        android:layout_alignRight="@+id/ans1"
        android:layout_alignEnd="@+id/ans1"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplier"
        android:layout_alignTop="@+id/qnumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/x3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: "
        android:id="@+id/score"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/clock"
        android:layout_alignTop="@+id/countDown"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
