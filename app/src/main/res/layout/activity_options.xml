<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.company.umutmucahit.competitiontime.Options"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Options"
        android:id="@+id/textView14"
        android:layout_marginTop="94dp"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_action_bar_default_height_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sound Effects"
        android:id="@+id/soundSwitch"
        android:layout_marginTop="53dp"
        android:checked="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_action_button_min_height_material"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/musicSwitch"
        android:checked="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_action_button_min_height_material"
        android:layout_marginTop="44dp"
        android:text="In-Game Music"
        android:layout_below="@+id/soundSwitch"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG OUT"
        android:id="@+id/logout"
        android:layout_below="@+id/musicSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:textSize="@dimen/abc_action_bar_stacked_max_height" />

</RelativeLayout>
